{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@assets/*": ["assets/*"],
      "@constants/*": ["src/constants/*"],
      "@firebaseConfig": ["firebaseConfig.js"],
      "@firebase/auth": ["./node_modules/@firebase/auth/dist/index.rn.d.ts"],
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts", 
    "assets/data/Data.js"  
  ]
}
